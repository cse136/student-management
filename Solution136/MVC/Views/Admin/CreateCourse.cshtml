@{
    ViewBag.Title = "Add New Course";
}

<ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li><a href="/Admin?id=1">Admin</a></li>
    <li class="active">Add New Course</li>
</ol>

<h3>Add New Course</h3>
<br />
<form class="form-horizontal">
    <p>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="level">Course Level</label>
            <div class="col-sm-10">
                <select class="form-control" id="level">
                    <option value="lower" selected="selected">Lower</option>
                    <option value="upper">Upper</option>
                    <option value="grad">Graduate</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="course">Course</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="course" placeholder="e.g. CSE 5A">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="course_title">Title</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="course_title" placeholder="e.g. Introduction to Programming I">
            </div>
        </div>
        <button type="submit" class="btn btn-default">Add course</button>
    </p>
</form>