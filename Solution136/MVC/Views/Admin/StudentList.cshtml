@{
    ViewBag.Title = "Browse Students";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li><a href="/Admin?id=1">Admin</a></li>
    <li class="active">Browse Students<li>
</ol>

<h3>Browse Students</h3>
<br />
<form class="form-horizontal">
    <p>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="student_id">Student ID</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="student_id" placeholder="Please type a Student ID">

            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="ssn">SSN</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="ssn" placeholder="Please type a SSN">

            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="name">Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="name" placeholder="Please type a name">

            </div>
        </div>


        <div class="form-group">
            <label class="col-sm-2 control-label" for="email">Email</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="email" placeholder="Please type an email">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="gpa">Minimum GPA</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="gpa" placeholder="Please type a GPA">
            </div>
        </div>

        <button type="submit" class="btn btn-default">Filter students</button>

    </p>
</form>

<p>
    <table class="table" id="students">
        <tr>
            <th>
                Student ID
            </th>
            <th>
                SSN
            </th>
            <th>
