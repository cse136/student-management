<h3>Browse Courses</h3>
<br />
    <form class="form-horizontal">
        <p>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="level">Course Level</label>
                <div class="col-sm-10">
                    <select class="form-control" id="level">
                        <option value="all" selected="selected">All</option>
                        <option value="lower">Lower</option>
                        <option value="upper">Upper</option>
                        <option value="grad">Graduate</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="course">Course</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="course" placeholder="Please type a course">
                </div>
            </div>
            <button type="submit" class="btn btn-default">Filter courses</button>
        </p>
</form>

