@{
    ViewBag.Title = "Schedule a Course ";
}

<ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li><a href="/Admin?id=1">Admin</a></li>
    <li class="active">Schedule a Course</li>
</ol>

<h3>Schedule a Course</h3>
<br />
<form class="form-horizontal">
    <p>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="year">Year</label>
            <div class="col-sm-10">
                <select class="form-control" id="year">
                    <option value="2016" selected="selected">2016</option>
                    <option value="2015">2015</option>
                    <option value="2014">2014</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="quarter">Quarter</label>
            <div class="col-sm-10">
                <select class="form-control" id="quarter">
                    <option value="Fall">Fall</option>
                    <option value="Winter">Winter</option>
                    <option value="Spring">Spring</option>
                    <option value="Summer 1">Summer 1</option>
                    <option value="Summer 2" selected="selected">Summer 2</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="course">Course</label>
            <div class="col-sm-10">
                <select class="form-control" id="course">
                    <option value="" selected="selected">Select</option>
                    <option value="2">CSE 3</option>
                    <option value="3">CSE 4GS</option>
                    <option value="4">CSE 5A</option>
                    <option value="5">CSE 110</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="section">Section</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="section" placeholder="e.g. A00">

            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="day">Days</label>
            <div class="col-sm-10">
                <select class="form-control" id="day">

                    <option value="" selected="selected">Select</option>
                    <option value="1">Mon/Wed</option>
                    <option value="2">Tue/Thu</option>
                    <option value="3">Mon-Thu</option>
                    <option value="4">Mon/Wed/Fri</option>
                    <option value="5">Mon-Fri</option>
                </select>
            </div>

        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="time">Times</label>
            <div class="col-sm-10">
                <select class="form-control" id="time">

                    <option value="" selected="selected">Select</option>
                    <option value="1">8am-9am</option>
                    <option value="2">8am-9:30am</option>
                    <option value="3">9am-10am</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="classroom">Classroom</label>
            <div class="col-sm-10">
                <select class="form-control" id="classroom">

                    <option value="" selected="selected">Select</option>
                    <option value="1">CENTER 115</option>
                    <option value="2">WLH 2005</option>
                    <option value="3">WLH 2001</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="instructor">Instructor</label>
            <div class="col-sm-10">
                <select class="form-control" id="instructor">
                    <option value="" selected="selected">Select</option>
                    <option value="1">Isaac Chu</option>
                    <option value="2">Gary Gillespie</option>
                </select>
            </div>
        </div>
        <button type="submit" class="btn btn-default">Schedule course</button>

    </p>
</form>