@{
    ViewBag.Title = "Edit Scheduled Course";
}

<ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li><a href="/Admin?id=1">Admin</a></li>
    <li><a href="/Admin/ScheduledCourseList">Browse Course Schedule</a></li>
    <li class="active">Edit Scheduled Course</li>
</ol>

<h3>Summer 1, 2016</h3>
<h3>CSE 110, Section A00</h3>
<br />
<form class="form-horizontal">
    <p>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="title">Title</label>
            <div class="col-sm-10">
                <input readonly="readonly" type="text" class="form-control" id="title" value="Software Engineering">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="day">Days</label>
            <div class="col-sm-10">
                <select class="form-control" id="day">
                    <option value="1">Mon/Wed</option>
                    <option value="2" selected="selected">Tue/Thu</option>
                    <option value="3">Mon-Thu</option>
                    <option value="4">Mon/Wed/Fri</option>
                    <option value="5">Mon-Fri</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="time">Times</label>
            <div class="col-sm-10">
                <select class="form-control" id="time">
                    <option value="1">8am-9am</option>
                    <option value="2" selected="selected">8am-9:30am</option>
                    <option value="3">9am-10am</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="classroom">Classroom</label>
            <div class="col-sm-10">
                <select class="form-control" id="classroom">
                    <option value="1">CENTER 115</option>
                    <option value="2" selected="selected">WLH 2005</option>
                    <option value="3">WLH 2001</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="instructor">Instructor</label>
            <div class="col-sm-10">
                <select class="form-control" id="instructor">
                    <option value="1">Isaac Chu</option>
                    <option value="2" selected="selected">Gary Gillespie</option>
                </select>
            </div>
        </div>
        <button type="submit" class="btn btn-default">Save changes</button>

    </p>
</form>