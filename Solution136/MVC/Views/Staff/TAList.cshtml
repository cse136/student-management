@{
    ViewBag.Title = "Browse TAs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li><a href="/Admin?id=1">Admin</a></li>
    <li class="active">Browse TAs
    <li>
</ol>

<div class="col-lg-offset-1">
    <h3>Browse TAs</h3>
</div>
<br />
<form class="form-horizontal">
    <p>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="name">Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="name" placeholder="Please type name">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="type">Type</label>
            <div class="col-sm-10">
                <select class="form-control" id="level">
                    <option value="all" selected="selected">All</option>

                    <option value="lower">Lower</option>
                    <option value="upper">Upper</option>
                    <option value="grad">Graduate</option>
                </select>
            </div>
        </div>



        <button type="submit" class="btn btn-default">Filter TAs</button>

    </p>
</form>

<p>
    <table class="table" id="TAs">
        <tr>
            <th>
                Name
            </th>

            <th>
                Type
            </th>
            <th>
                Details
            </th>
            <th></th>
        </tr>

        <tbody data-bind="foreach: viewModel">
            <tr>
                <td data-bind="text: name"></td>
                <td data-bind="text: type"></td>
                <td>
                    <a href="/Admin/TADetails?id=10">View</a>
                </td>
                <td>
                    <a href="/Admin/EditTA?id=10">Edit</a>
                </td>
            </tr>
        </tbody>
    </table>
</p>

<script type="text/javascript">
    $(document).ready(function () {
        var studentViewModelObj = new StudentViewModel();
        studentViewModelObj.GetAll();
    })
</script>