@{
    ViewBag.Title = "Edit Student";
}

<ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li><a href="/Admin?id=1">Admin</a></li>
    <li><a href="/Admin/StudentList">Browse Students</a></li>
    <li class="active">Edit Student</li>
</ol>

<h3>Editing Student A000001, John Doe</h3>
<br />
<form class="form-horizontal">
    <p>


        <div class="form-group">
            <label class="col-sm-2 control-label" for="ssn">SSN</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control" id="ssn" placeholder="Please type a SSN" value="123456789">

            </div>
        </div>


        <div class="form-group">
            <label class="col-sm-2 control-label" for="email">Email</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="email" placeholder="Please type an email" value="xx1@ucsd.edu">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="shoe_size">Shoe Size</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="shoe_size" placeholder="Please type a shoe size" value="9">
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label" for="weight">Weight</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="weight" placeholder="Please type a weight" value="100">
            </div>
        </div>

        <button type="submit" class="btn btn-default">Save changes</button>

    </p>
</form>